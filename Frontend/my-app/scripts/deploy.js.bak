const hre = require("hardhat");

async function main() {
    // Get the contract factory
    const VotingContract = await hre.ethers.getContractFactory("VotingContract");

    // Deploy the contract
    const votingContract = await VotingContract.deploy();

    // Wait for deployment to finish
    await votingContract.deployed();

    console.log("VotingContract deployed to:", votingContract.address);
    console.log("Transaction hash:", votingContract.deployTransaction.hash);

    // Save the contract address to a file
    const fs = require('fs');
    const contractInfo = {
        address: votingContract.address,
        transactionHash: votingContract.deployTransaction.hash,
        network: hre.network.name,
        timestamp: new Date().toISOString()
    };

    fs.writeFileSync(
        'contract-info.json',
        JSON.stringify(contractInfo, null, 2)
    );

    console.log("Contract info saved to contract-info.json");
}

main()
    .then(() => process.exit(0))
    .catch((error) => {
        console.error(error);
        process.exit(1);
    });
